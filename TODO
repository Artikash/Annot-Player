libvlc_exception_t ex;
libvlc_instance_t* inst;
static const char* args[] = {
                                   "--codec", "invmem",
                                   "-vvvvv",
                                   "-I", "dummy",
                                   "--no-ipv6",
                                   "--ipv4",
                                   "--file-logging",
                                   "--drop-late-frames",
                                   "--skip-frames",
                                   "--no-sout-transcode-hurry-up",
                                   "--logfile", "/var/log/mylogfile"
                                   };

libvlc_exception_init(&ex);
inst = libvlc_new(argv, args, &ex);
if(inst == NULL || libvlc_exception_raised(&ex)) {
  //your error handler
}

